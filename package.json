{
  "name": "borclu-sorgulama",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "dev:turbo": "cross-env TURBOPACK=1 next dev --turbo",
    "dev:fast": "cross-env TURBOPACK=1 NODE_OPTIONS='--max-old-space-size=4096' next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "start": "node server.js",
    "start:ngrok": "set ENABLE_NGROK=true && node server.js",
    "dev:ngrok": "set ENABLE_NGROK=true && next dev",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t borclu-sorgulama:latest .",
    "docker:build:fast": "set DOCKER_BUILDKIT=1 && docker build --build-arg BUILDKIT_INLINE_CACHE=1 -t borclu-sorgulama:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "db:init": "node scripts/init-db.js",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "security:check": "node scripts/security-check.js",
    "users:create": "node scripts/create-users.js",
    "migrate:to-supabase": "node scripts/migrate-data-to-supabase.js"
